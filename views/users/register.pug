extends ../layout

block content
  .form-card
    h2 Create account
    if errors
      ul.errors
        each e in errors
          li #{e}

    form(action="/users/register" method="post" class="form")
      label.label Username
      input.input(type="text" name="username" value=form.username)

      label.label Email
      input.input(type="email" name="email" value=form.email)

      label.label Password
      input.input(type="password" name="password")

      label.label Confirm Password
      input.input(type="password" name="password2")

      button.btn(type="submit") Register

